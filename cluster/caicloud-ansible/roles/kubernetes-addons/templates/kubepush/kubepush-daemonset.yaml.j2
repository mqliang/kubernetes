apiVersion: extensions/v1beta1
kind: DaemonSet
metadata:
  labels:
    k8s-app: kubepush
    kubernetes.io/cluster-service: "true"
    kubernetes-admin.caicloud.io/type: application
    kubernetes-admin.caicloud.io/application: kubepush
  name: kube-push
  namespace: kube-system
spec:
  template:
    metadata:
      labels:
        k8s-app: kubepush
        kubernetes.io/cluster-service: "true"
        kubernetes-admin.caicloud.io/type: application
        kubernetes-admin.caicloud.io/application: kubepush
    spec:
      containers:
        - name: kubepush
          image: {{ kubepush_image_kubepush }}
          imagePullPolicy: Always
          resources:
            limits:
              cpu: 50m
              memory: 100Mi
            requests:
              cpu: 50m
              memory: 100Mi
          env:
            - name: POD_NAME
              valueFrom:
                fieldRef:
                  fieldPath: metadata.name
            - name: POD_NAMESPACE
              valueFrom:
                fieldRef:
                  fieldPath: metadata.namespace
          volumeMounts:
            - name: run
              mountPath: /var/run/docker.sock
      volumes:
        - name: run
          hostPath:
              path: /var/run/docker.sock
