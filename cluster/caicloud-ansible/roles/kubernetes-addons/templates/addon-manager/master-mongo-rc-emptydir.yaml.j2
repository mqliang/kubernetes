apiVersion: v1
kind: ReplicationController
metadata:
  name: addon-manager-mongo-v0.0.1
  labels:
    caicloud-app: addon-manager-mongo
    caicloud.io/cluster-service: "true"
    kubernetes-admin.caicloud.io/application: addon-manager-mongo-v0.0.1
    kubernetes-admin.caicloud.io/type: application
    addon-manager.caicloud.io/name: addon-manager-master
    addon-manager.caicloud.io/version: v0.0.1
    addon-manager.caicloud.io/key: master-mongo-rc
    version: v0.0.1
spec:
  replicas: 1
  selector:
    caicloud-app: addon-manager-mongo
    version: v0.0.1
  template:
    metadata:
      labels:
        caicloud-app: addon-manager-mongo
        caicloud.io/cluster-service: "true"
        kubernetes-admin.caicloud.io/application: addon-manager-mongo-v0.0.1
        kubernetes-admin.caicloud.io/type: application
        version: v0.0.1
    spec:
      containers:
      - name: mongo
        image: {{ common_image_mongo }}
        ports:
        - containerPort: 27017
        volumeMounts:
        - name: mongo-persistent-storage
          mountPath: /data/db
      volumes:
      - name: mongo-persistent-storage
        emptyDir: {}
