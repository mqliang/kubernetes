apiVersion: v1
kind: ReplicationController
metadata:
  name: addon-manager-master-v0.0.1
  labels:
    caicloud-app: addon-manager-master
    caicloud.io/cluster-service: "true"
    kubernetes-admin.caicloud.io/application: addon-manager-master-v0.0.1
    kubernetes-admin.caicloud.io/type: application
    addon-manager.caicloud.io/name: addon-manager-master
    addon-manager.caicloud.io/version: v0.0.1
    addon-manager.caicloud.io/key: master-rc
    version: v0.0.1
spec:
  replicas: 1
  selector:
    caicloud-app: addon-manager-master
    version: v0.0.1
  template:
    metadata:
      labels:
        caicloud-app: addon-manager-master
        caicloud.io/cluster-service: "true"
        kubernetes-admin.caicloud.io/application: addon-manager-master-v0.0.1
        kubernetes-admin.caicloud.io/type: application
        version: v0.0.1
    spec:
      containers:
        - image: {{ addon_manager_master_image }}
          imagePullPolicy: Always
          name: addon-manager-master
          resources:
            limits:
              cpu: 100m
              memory: 100Mi
            requests:
              cpu: 100m
              memory: 100Mi
          env:
          - name: MONGODB_URL
            value: "addon-manager-mongo:27017"
          - name: CLUSTER_ID
            value: {{ cluster_id }}
