apiVersion: v1
kind: ReplicationController
metadata:
  name: addon-manager-minion-caicloud-v0.0.1
  namespace: kube-system
  labels:
    caicloud-app: addon-manager-minion-caicloud
    caicloud.io/cluster-service: "true"
    kubernetes-admin.caicloud.io/application: addon-manager-minion-caicloud-v0.0.1
    kubernetes-admin.caicloud.io/type: application
    addon-manager.caicloud.io/name: addon-manager
    addon-manager.caicloud.io/version: v0.0.1
    addon-manager.caicloud.io/key: minion-rc
    version: v0.0.1
spec:
  replicas: 1
  selector:
    caicloud-app: addon-manager-minion-caicloud
    version: v0.0.1
  template:
    metadata:
      labels:
        caicloud-app: addon-manager-minion-caicloud
        caicloud.io/cluster-service: "true"
        kubernetes-admin.caicloud.io/application: addon-manager-minion-caicloud-v0.0.1
        kubernetes-admin.caicloud.io/type: application
        version: v0.0.1
    spec:
      containers:
      - image: {{ addon_manager_minion_image }}
        imagePullPolicy: Always
        name: addon-manager-minion-caicloud
        resources:
          limits:
            cpu: 1000m
            memory: 200Mi
          requests:
            cpu: 100m
            memory: 100Mi
        env:
        - name: MASTER_URL
          value: {{ addon_manager_master_url }}
        - name: ADDON_YAML_PATH
          value: "/etc/kubernetes"
        - name: IN_CLUSTER
          value: "true"
        - name: ADDON_TYPE
          value: caicloud_stack
        - name: CLUSTER_ID
          value: {{ cluster_id }}
        - name: USER_ID
          value: {{ caicloud_uid }}
        - name: ACCESS_TOKEN
          value: {{ cluster_token }}
        - name: OWN_POD_NAME
          valueFrom:
            fieldRef:
              fieldPath: metadata.name
        - name: OWN_NAME
          value: addon-manager-minion-caicloud-v0.0.1
        - name: GROUP_NAME
          value: addon-manager
        volumeMounts:
        - name: kube-system-yaml
          mountPath: "/etc/kubernetes"
      volumes:
      - name: kube-system-yaml
        emptyDir: {}
