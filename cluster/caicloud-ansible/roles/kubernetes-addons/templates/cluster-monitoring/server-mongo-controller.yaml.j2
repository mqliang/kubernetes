apiVersion: v1
kind: ReplicationController
metadata:
  name: monitoring-server-mongo
  labels:
    name: monitoring-server-mongo
    kubernetes.io/cluster-service: "true"
    kubernetes-admin.caicloud.io/type: application
    kubernetes-admin.caicloud.io/application: monitoring-server-mongo
  namespace: kube-system
spec:
  replicas: 1
  selector:
    name: monitoring-server-mongo
  template:
    metadata:
      labels:
        name: monitoring-server-mongo
        kubernetes.io/cluster-service: "true"
        kubernetes-admin.caicloud.io/type: application
        kubernetes-admin.caicloud.io/application: monitoring-server-mongo
    spec:
      containers:
      - name: mongo
        image: index.caicloud.io/caicloud/mongo:3.0.5
        imagePullPolicy: Always
        resources:
          # keep request = limit to keep this container in guaranteed class
          limits:
            cpu: 50m
            memory: 100Mi
          requests:
            cpu: 50m
            memory: 50Mi
        ports:
        - containerPort: 27017
        volumeMounts:
        - name: mongo-persistent-storage
          mountPath: /data/db
      volumes:
      - name: mongo-persistent-storage
        emptyDir: {}
