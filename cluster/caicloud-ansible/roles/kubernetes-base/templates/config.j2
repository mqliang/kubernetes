###
# kubernetes system config
#
# The following values are used to configure various aspects of all
# kubernetes services, including
#
#   kube-apiserver.service
#   kube-controller-manager.service
#   kube-scheduler.service
#   kubelet.service
#   kube-proxy.service

# logging to stderr means we get it in the systemd journal
KUBE_LOGTOSTDERR="--logtostderr=true"

# journal verbosity level, the higher is the more verbose
KUBE_LOG_LEVEL="--v={{ kube_log_level }}"

# Should this cluster be allowed to run privileged docker containers
KUBE_ALLOW_PRIV="--allow-privileged=true"

# How the replication controller, scheduler, and proxy connect to master
KUBE_MASTER="--master={{ kube_apiserver_endpoint }}"

# The following values are used to configure:
#
#   kube-apiserver
#   kube-controller-manager
#   kubelet

KUBE_CLOUD_PROVIDER="{% if host_provider == "aliyun" or host_provider == "anchnet" %}--cloud-provider={{ host_provider }} --cloud-config={{ kube_config_dir }}/cloud-config{% endif %}"
