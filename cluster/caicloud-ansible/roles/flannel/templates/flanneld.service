[Unit]
After=network-online.target
Wants=network-online.target
Description=flannel is an etcd backed overlay network for containers

[Service]
Type=notify
EnvironmentFile={{ flannel_config_dir }}/flanneld
ExecStart={{ bin_dir }}/flanneld --etcd-endpoints=${FLANNEL_ETCD} --etcd-prefix=${FLANNEL_ETCD_KEY} -iface=${FLANNEL_INTERFACE} $FLANNEL_OPTIONS
ExecStartPost={{ bin_dir }}/mk-docker-opts.sh -d /run/flannel_docker_opts.env -i

[Install]
WantedBy=multi-user.target
