apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: kube-dns-autoscaler
  namespace: kube-system
  labels:
    k8s-app: kube-dns-autoscaler
    kubernetes.io/cluster-service: "true"
    version: v21
    kubernetes-admin.caicloud.io/type: application
    kubernetes-admin.caicloud.io/application: kube-dns-v21
spec:
  template:
    metadata:
      labels:
        k8s-app: kube-dns-autoscaler
        version: v21
        kubernetes-admin.caicloud.io/type: application
        kubernetes-admin.caicloud.io/application: kube-dns-v21
      annotations:
        scheduler.alpha.kubernetes.io/critical-pod: ''
        scheduler.alpha.kubernetes.io/tolerations: '[{"key":"CriticalAddonsOnly", "operator":"Exists"}]'
    spec:
      containers:
      - name: autoscaler
        image: {{ pillar['dns_hpa_image'] }} 
        resources:
            requests:
                cpu: "20m"
                memory: "10Mi"
        command:
          - /cluster-proportional-autoscaler
          - --namespace=kube-system
          - --configmap=kube-dns-autoscaler
          - --mode=linear
          # Should keep target in sync with cluster/addons/dns/skydns-rc.yaml.base
          - --target=Deployment/kube-dns-v21
          # When cluster is using large nodes(with more cores), "coresPerReplica" should dominate.
          # If using small nodes, "nodesPerReplica" should dominate.
          - --default-params={"linear":{"coresPerReplica":{{ pillar['cores_per_dns_replica'] }},"nodesPerReplica":{{ pillar['nodes_per_dns_replica'] }},"min":{{ pillar['min_dns_replicas'] }}}}
          - --logtostderr=true
          - --v=2
