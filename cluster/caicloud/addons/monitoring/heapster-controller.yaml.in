apiVersion: v1
kind: ReplicationController
metadata:
  name: heapster
  namespace: kube-system
  labels:
    k8s-app: heapster
    kubernetes.io/cluster-service: "true"
spec:
  replicas: 1
  selector:
    k8s-app: heapster
  template:
    metadata:
      labels:
        k8s-app: heapster
        kubernetes.io/cluster-service: "true"
    spec:
      containers:
        - image: index.caicloud.io/caicloud/google-heapster:v1.0.0
          name: heapster
          resources:
            limits:
              cpu: 100m
              memory: {{ pillar['heapster_memory'] }}
            requests:
              cpu: 100m
              memory: {{ pillar['heapster_request'] }}
          command:
            - /heapster
            - --source=kubernetes:''
            - --sink=influxdb:http://monitoring-influxdb:8086
            - --metric_resolution=10s
        - image: index.caicloud.io/caicloud/google-heapster:v1.0.0
          name: eventer
          resources:
            limits:
              cpu: 100m
              memory: {{ pillar['heapster_memory'] }}
            requests:
              cpu: 100m
              memory: {{ pillar['heapster_request'] }}
          command:
            - /eventer
            - --source=kubernetes:''
            - --sink=influxdb:http://monitoring-influxdb:8086
